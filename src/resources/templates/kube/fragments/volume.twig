{% import "kube/macros.twig" as macros %}

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ volume.serviceName }}{{ macros.volumePathToName(volume.name) }}-claim
spec:
  resources:
    requests:
      storage: {{ macros.getSizeFromVolume(volume.name) }}
  accessModes:
    - ReadWriteOnce
