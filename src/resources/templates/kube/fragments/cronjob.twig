{% for cronjob in service._cronjobs %}

---
apiVersion: batch/v1
kind: CronJob
metadata:
  name: {{ cronjob.name }}
spec:
  schedule: '{{ cronjob.cronSchedule }}'
  jobTemplate:
    spec:
{# added context for template? #}
{% if cronjob.addedContext is defined %}
  {%~ set service = service|merge(cronjob.addedContext) %}
{% endif %}
{{ subPathRendering('kube/fragments/deployment.twig', '/spec/template/spec', 6) }}

{% endfor %}
